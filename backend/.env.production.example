# Production Environment Configuration
# Copy this file to .env.production and fill in your values
# 
# IMPORTANT: All required variables MUST be set in production
# The backend will fail to start if required variables are missing

# ============================================
# REQUIRED VARIABLES
# ============================================

# Authentication Token (REQUIRED)
# Generate a secure random token:
# openssl rand -hex 32
# DO NOT use default values in production!
AUTH_TOKEN=your-secure-production-token-here

# Scripts Directory (REQUIRED)
# Path to directory containing bash scripts on production server
# Scripts are symlinked and must NOT be modified
# Example: /opt/fail2ban-dashboard/scripts
SCRIPTS_DIR=/opt/fail2ban-dashboard/scripts

# ============================================
# RECOMMENDED VARIABLES
# ============================================

# Server Configuration
PORT=3001
NODE_ENV=production
# Network binding: 127.0.0.1 is localhost only, 0.0.0.0 allows all interfaces
# Default in production: 127.0.0.1 (use reverse proxy for external access)
# Set to 0.0.0.0 if you need direct LAN access (not recommended for production)
SERVER_HOST=127.0.0.1

# Fail2ban Availability (REQUIRED in production)
# Set to true if fail2ban is installed and available
FAIL2BAN_AVAILABLE=true

# CORS Configuration
# Set to your frontend URL (no wildcards allowed)
CORS_ORIGIN=https://your-frontend-domain.com

# ============================================
# OPTIONAL VARIABLES
# ============================================

# Cache Configuration (milliseconds)
CACHE_OVERVIEW_TTL=10000
CACHE_JAILS_TTL=5000
CACHE_NGINX_TTL=10000
CACHE_SYSTEM_TTL=30000

# Performance Monitoring (disabled by default in production)
PERFORMANCE_MONITORING=false

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# Script Execution
SCRIPT_TIMEOUT=30000

# Paths (used by scripts)
NGINX_ACCESS_LOG=/var/log/nginx/access.log
FAIL2BAN_CONFIG=/etc/fail2ban

# Sudo User (if different from current user)
# SUDO_USER=sentinel_user
