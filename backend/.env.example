# Sentinel Dashboard Backend - Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=production
SERVER_HOST=0.0.0.0
SERVER_PORT=3010
SCRIPTS_DIR=/opt/sentinel/backend/scripts

# Authentication
AUTH_ENABLED=true
AUTH_TOKEN=change-me-in-production
AUTH_SECRET=change-me-in-production

# JWT Configuration
JWT_SECRET=change-me-in-production
JWT_EXPIRES=1h
JWT_REFRESH_EXPIRES=7d

# IP Allowlist (blocks all other origins if set)
# Set to "*" to disable allowlist (allow all)
# Set to comma-separated IPs/CIDR: "192.168.0.0/24,10.0.0.1"
ALLOWLIST=*

# IP Allowlist for Auth Bypass (different from ALLOWLIST)
# Comma-separated IPs/CIDR that can bypass authentication
AUTH_ALLOW_IPS=

# Rate Limiting
RATE_LIMIT_LOGIN=5
RATE_LIMIT_API=100

# Fail2ban
FAIL2BAN_DB=/var/lib/fail2ban/fail2ban.sqlite3
FAIL2BAN_LOG=/var/log/fail2ban.log

# CORS
CORS_ORIGIN=http://localhost:8080
