# Sentinel Backend - Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3010
SERVER_HOST=0.0.0.0
NODE_ENV=development

# Authentication (REQUIRED)
AUTH_ENABLED=true
AUTH_TOKEN=your-secure-random-token-here-min-32-chars
AUTH_SECRET=your-jwt-secret-here-can-be-same-as-token

# Optional: IP Allowlist (bypass auth for trusted IPs)
# AUTH_ALLOW_IPS=127.0.0.1,192.168.0.0/24

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Scripts Directory (REQUIRED)
SCRIPTS_DIR=/opt/fail2ban-dashboard/scripts

# Fail2ban Configuration
FAIL2BAN_AVAILABLE=true
F2B_DB=/var/lib/fail2ban/fail2ban.sqlite3
F2B_LOG=/var/log/fail2ban.log
F2B_FILTER_DIR=/etc/fail2ban/filter.d
FAIL2BAN_CONFIG=/etc/fail2ban

# Nginx Configuration
NGINX_ACCESS_LOG=/var/log/nginx/access.log

# Cache Configuration (milliseconds)
CACHE_TTL=5000
CACHE_OVERVIEW_TTL=10000
CACHE_JAILS_TTL=5000
CACHE_NGINX_TTL=10000
CACHE_SYSTEM_TTL=30000

# Performance Monitoring
PERFORMANCE_MONITORING=true
SLOW_REQUEST_THRESHOLD=300
VERY_SLOW_REQUEST_THRESHOLD=1000
OVERVIEW_MAX_RESPONSE_TIME=250
OVERVIEW_SCRIPT_TIMEOUT=2000

# Script Execution Timeout (milliseconds)
SCRIPT_TIMEOUT=30000

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100
