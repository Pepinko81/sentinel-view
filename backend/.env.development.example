# Development Environment Configuration
# Copy this file to .env.development and fill in your values

# ============================================
# REQUIRED VARIABLES
# ============================================

# Authentication Token (REQUIRED)
# Generate a secure random token:
# openssl rand -hex 32
AUTH_TOKEN=dev-token-change-me

# Scripts Directory (REQUIRED)
# Path to directory containing bash scripts
# In development, can point to local scripts directory
SCRIPTS_DIR=/home/pepinko/sentinel-view/opt/fail2ban-dashboard/scripts

# ============================================
# OPTIONAL VARIABLES
# ============================================

# Server Configuration
PORT=3001
NODE_ENV=development
# Network binding: 0.0.0.0 allows LAN access, 127.0.0.1 is localhost only
# Default in development: 0.0.0.0 (LAN access enabled)
SERVER_HOST=0.0.0.0

# Fail2ban Availability
# Set to false if fail2ban is not installed/available in development
FAIL2BAN_AVAILABLE=false

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Cache Configuration (milliseconds)
CACHE_OVERVIEW_TTL=10000
CACHE_JAILS_TTL=5000
CACHE_NGINX_TTL=10000
CACHE_SYSTEM_TTL=30000

# Performance Monitoring
PERFORMANCE_MONITORING=true

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# Script Execution
SCRIPT_TIMEOUT=30000

# Paths (optional, used by scripts)
NGINX_ACCESS_LOG=/var/log/nginx/access.log
FAIL2BAN_CONFIG=/etc/fail2ban
